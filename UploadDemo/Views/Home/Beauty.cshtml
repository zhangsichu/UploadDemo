@{
    ViewBag.Title = "Form Upload";
}

@section styles{
    @Styles.Render("~/Content/fileinput")
}

<div class="jumbotron">
    <h1>Form Upload File</h1>
    <p class="lead">multipart/form-data  <a href="http://www.ietf.org/rfc/rfc2388.txt" target="_blank">http://www.ietf.org/rfc/rfc2388.txt</a></p>
    <p class="lead">application/x-www-form-urlencoded  <a href="http://www.w3.org/TR/html401/interact/forms.html#h-17.13.4.1" target="_blank">http://www.w3.org/TR/html401/interact/forms.html#h-17.13.4.1</a></p>
</div>

<div class="container">
    <form method="post" enctype="multipart/form-data" action="/Home/Beauty">
        <div class="form-group">
            <input id="file-1" name="file-1" type="file" class="file">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
            <button class="btn btn-default" type="reset">Reset</button>
            <button class="btn btn-warning" type="button">Disable</button>
        </div>
    </form>
</div>

@section scripts{
    @Scripts.Render("~/bundles/fileinput")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btn-warning").on('click', function () {
                if ($('#file-1').attr('disabled')) {
                    $('#file-1').fileinput('enable');
                } else {
                    $('#file-1').fileinput('disable');
                }
            });
        });
    </script>
}